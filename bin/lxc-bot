#!/bin/bash

if [ $# -eq 0 ]
  then
    echo "No arguments supplied, syntax is lxc-bot <pid>"
else
    if [ -f /proc/$1/cgroup ]
      then
        cat /proc/$1/cgroup | grep memory | cut -d'/' -f 3 | xargs docker inspect | grep Name | cut -d'/' -f 2 | awk -F '_-_' '{print $1  "/"  $2}'
    else
        echo "Process not found."
    fi
fi
